page {
  background-color: #F5F6F7;
}

.tabbar{
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  border-bottom: 0.5px solid rgba(51,52,64,0.1);
}
.tab-item{
  box-sizing: border-box;
  position: absolute;
  width: 120rpx;
  height: 70rpx;
  line-height: 1.0;
  text-align: center;
  font-size: 28rpx;
  padding-top: 10rpx;
  font-weight: 500;
  color: #333440;
}
.left-148{
  left:148rpx;
}
.left-484{
  left:484rpx;
}
.right-148{
  right: 148rpx;
}
.active-color{
  color: #2657EB;
}
.red-dot{
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #F64A4B;
  top: 20rpx;
  right: 10rpx;
}
.active-bottom{
  position: absolute;
  width: 120rpx;
  height: 6rpx;
  background-color: #2657EB;
  border-radius: 4rpx;
  bottom: 0;
  transition: left 0.3s ease-out;
}