<view class='container'>
  <view class='tabbar'>
    <view bindtap='bindtab' data-type="1" data-active='{{active}}' class='tab-item left-148 {{active ? "active-color" : ""}}'>
      定额券
    </view>
    <view bindtap='bindtab' data-type="2" data-active='{{active}}' class='tab-item right-148 {{active ? "" : "active-color"}}'>时长券</view>
    <view class='active-bottom {{active ? "left-148" : "left-484"}}'></view>
  </view>

  <view class='coupons-box'>
    <view class='coupons-list'>
      <block wx:for='[1,2,3,4,5]' wx:key="*this">
        <d-coupon></d-coupon>
      </block>
      <view wx:if='{{noMore}}' class='no-more'>没有更多了</view>
    </view> 
  </view>

   <navigator class='product' url="/pages/qrcode/index" hover-class="none">生成二维码</navigator>
</view>