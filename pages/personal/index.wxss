page {
  background-color: #F5F6F7;
}

.container {
  background-color: transparent;
}

.header {
  border-bottom: 0.5px solid #EEEFF1;
  margin-bottom: 30rpx;
  background-color: #fff;
}

.user {
  position: relative;
  width: 100%;
  height: 212rpx;
}

.user-bg {
  position: absolute;
  width: 100%;
  height: 212rpx;
  left: 0;
  top: 0;
  z-index: 0;
}

.user-box {
  position: relative;
  width: 100%;
  height: 212rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  box-sizing: border-box;
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  overflow: hidden;
  margin-left: 46rpx;
  margin-right: 26rpx;
}

.info {
  color: #fff;
}

.nick-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.buss-name {
  font-size: 26rpx;
  font-weight: 400;
  opacity: 0.7;
}

.coupons {
  box-sizing: border-box;
  padding: 0 108rpx;
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.coupon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.amount {
  font-family: Helvetica;
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.quota-amount {
  color: #FA4E4E
}

.long-term-amount {
  color: #FF9B0D;
}

.desc {
  font-size: 24rpx;
  color: #8D96A4;
  font-weight: 400;
}

.line {
  width: 0.5px;
  height: 88rpx;
  background-color: #EEEFF1;
}

.exit {
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  border-top: 0.5px solid #EEEFF1;
  border-bottom: 0.5px solid #EEEFF1;
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: 400;
  color:#FA4E4E;
  background-color: #fff;
}
