.name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  max-width: 384rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.duration {
  font-size: 26rpx;
  font-weight: 400;
  opacity: 0.5;
}

.money {
  display: flex;
  align-items: baseline;
}

.amount {
  font-family: Helvetica;
  font-size: 94rpx;
  font-weight: bold;
}

.yuan {
  font-size: 28rpx;
  font-weight: 500;
}