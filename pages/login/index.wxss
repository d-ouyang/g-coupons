.modelBox {
  position: absolute;
  width: 560rpx;
  height: 266rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  border-radius: 8rpx;
}

.content {
  box-sizing: border-box;
  width: 100%;
  height: 164rpx;
  border-bottom: 0.5px solid #EEEFF1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #888;
  font-weight: 500;
}

.content text {
  line-height: 1.5;
}

.confirm {
  width: 100%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
  font-size: 36rpx;
  color: #617FDF;
  font-weight: 400;
}